@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="headerpadding"></div>
<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added.</h3>
}

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.LastName}, {stylist.FirstName}", "Details", new { id = stylist.StylistId})</li>
  }

</ul>

<p>@Html.ActionLink("Add new Stylist", "Create")</p>