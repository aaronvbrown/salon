@{
  Layout = "_Layout";
}


@model HairSalon.Models.Stylist;
@using HairSalon.Models;
@using System.Collections.Generic;

<div class="headerpadding"></div>
<h2>Stylist Details</h2>
<hr />
<p>@Html.DisplayNameFor(model => model.LastName): @Html.DisplayFor(model => model.LastName)</p>
<p>@Html.DisplayNameFor(model => model.FirstName): @Html.DisplayFor(model => model.FirstName)</p>

@if(@Model.Clients.Count == 0)
{
  <h4>No clients have been added.</h4>
  <p>@Html.ActionLink("Add a client", "Create", "Clients")</p>
}
else
{
  <h4>Clients:</h4>
  <ul>
    @foreach(Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.LastName}, {client.FirstName}", "Details", "Clients", new { id = client.ClientId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>