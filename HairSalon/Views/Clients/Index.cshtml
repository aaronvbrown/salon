@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="headerpadding"></div>
<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
  @Html.ActionLink("Add client", "Create", "Clients")
}
else
{
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.LastName}, {client.FirstName}", "Details", new { id = client.ClientId }) | Stylist: @client.Stylist.LastName</li>
    }
  </ul>
}
